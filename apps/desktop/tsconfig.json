{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@railgun/shared": ["../../packages/shared/src"],
      "@railgun/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["src/**/*", "electron/**/*", "src/vite-env.d.ts"],
  "exclude": ["node_modules", "dist", "dist-electron", "release", "src/**/*.test.ts", "src/**/*.test.tsx", "src/lib/__tests__/**"],
  "references": [
    { "path": "../../packages/shared" }
  ]
}
