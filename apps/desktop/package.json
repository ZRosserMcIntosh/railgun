{
  "name": "@railgun/desktop",
  "version": "0.1.0",
  "description": "Rail Gun - Secure encrypted messaging desktop client",
  "author": "Rail Gun Team",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder --dir",
    "build:electron": "tsc -p tsconfig.electron.json && electron-builder",
    "build:win": "tsc -p tsconfig.electron.json && vite build && electron-builder --win",
    "build:mac": "tsc -p tsconfig.electron.json && vite build && electron-builder --mac",
    "build:linux": "tsc -p tsconfig.electron.json && vite build && electron-builder --linux",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@railgun/shared": "workspace:*",
    "@sentry/browser": "^10.32.1",
    "@sentry/electron": "^7.5.0",
    "@signalapp/libsignal-client": "^0.86.6",
    "libsodium-wrappers": "^0.7.15",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "socket.io-client": "^4.7.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.2",
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vitest": "^1.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.railgun.desktop",
    "productName": "Rail Gun",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "!**/node_modules/@signalapp/**",
      "!**/node_modules/better-sqlite3/**"
    ],
    "npmRebuild": false,
    "mac": {
      "category": "public.app-category.social-networking",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "resources/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.plist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/icon.ico",
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "resources/icons"
    }
  }
}
